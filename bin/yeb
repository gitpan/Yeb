#!/usr/bin/env perl
# PODNAME: yeb

use strict;
use warnings;
use Plack::Runner;
use lib 'lib';
use Carp;

my $class = shift @ARGV;

croak "yeb needs your application class as first parameter" unless defined $class;

my $runner = Plack::Runner->new;
$runner->parse_options(
	'-M'.$class,
	'-e'.$class.'->run_if_script',
	@ARGV
);
$runner->run;

__END__
=pod

=head1 NAME

yeb

=head1 VERSION

version 0.007

